<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<description>Spring数据访问层配置 </description>

	<bean id="writeBean" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="writeSource" />
		<property name="configLocation" value="classpath:sqlmap-config.xml" />
	</bean>
	
	<bean id="writeSession" class="org.mybatis.spring.SqlSessionTemplate">
		<constructor-arg index="0" ref="writeBean" />
	</bean>
	
		<!-- 宏财网,log日志写入主库 start -->
	<bean id="logWriteBean" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="logWriteSource" />
		<property name="configLocation" value="classpath:sqlmap-config.xml" />
	</bean>
	
	<bean id="logWriteSession" class="org.mybatis.spring.SqlSessionTemplate">
		<constructor-arg index="0" ref="logWriteBean" />
	</bean>
	<!-- 宏财网,log日志写入主库 end -->

</beans>